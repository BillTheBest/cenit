<ul class="nav nav-tabs tabs-left">
  <% algorithm_langs.each do |lang| %>
      <li class="<%= "active" if lang == algorithm_langs.first %>">
        <a data-toggle="tab" href="#codes-<%= lang[:id] %>"><%= lang[:label] %></a>
      </li>
  <% end %>
</ul>

<div class="tab-content rest-api-codes">
  <% algorithm_langs.each do |lang| %>
      <div id="codes-<%= lang[:id] %>" class="tab-pane fade in <%= "active" if lang == algorithm_langs.first %>">
        <%= form_tag('#', remote: true) do %>
            <fieldset>
              <div class="form-group control-group text_type">
                <label class="col-sm-12 control-label" for="algorithm_dependencies">Dependencies:</label>
                <div class="col-sm-12 controls">
                  <input type="hidden" name="lang_id" value="<%= lang[:id] %>">
                  <textarea name="dependencies" id="algorithm_dependencies" class="form-control" required="true"
                            data-richtext="false" data-options="{}" cols="48" rows="10">
                  <%= pull_dependencies(lang) %>
                </textarea>
                </div>
              </div>
            </fieldset>
            <br/>
            <div class="form-group form-actions">
              <div class="col-sm-offset-2 col-sm-10" style="text-align: right;">
                <button class="btn btn-primary" data-disable-with="Save" name="_save" type="submit">
                  <i class="icon-white icon-ok"></i>Save
                </button>
                <button class="btn btn-info" data-disable-with="Reset" name="_reset" type="reset">
                  <i class="icon-white icon-reset"></i>Reset
                </button>
              </div>
            </div>
        <% end %>
      </div>
  <% end %>
</div>