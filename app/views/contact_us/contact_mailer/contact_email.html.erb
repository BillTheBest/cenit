<% c = @contact %>
<!DOCTYPE html>
<html>
  <head>
    <style type="text/css">
      body {
        font-size: 12px;
        font-family: "Helvetica", "Arial", sans-serif;
      }
    </style>
  </head>
  <body>
    <h1>Contact Us Message</h1>
    <h2>Created at: <em><%= c.created_at %></em></h2>
    <table width="600" style="margin-top: 30px">
      <tbody>
        <tr>
          <td>
            <p>From name: <%= c.name %></p>
            <p>From email: <%= c.email %></p>
            <p>Subject: <%= c.subject %></p>
            <p>Message: <%= c.message %></p>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
