
.user-auth.panel.panel-default.text-center
  .panel-heading
    = link_to root_path do
      %span.cenit-logo
        =image_tag 'logo_cenitsaas_web.png'
      %span.cenit-hub{style: 'color: black;'}= 'Cenit IO'
  .panel-body
    .form-top
      =t('devise.invitations.new.header')
    = form_for resource, :as => resource_name, url: invitation_path(resource_name), html: {role: 'form', class: 'form-inline', method: :post} do |f|
      = devise_error_messages!
      - resource.class.invite_key_fields.each do |field|
        .field.text-justify
          = f.label field
          %br/
          = f.text_field field, autofocus: true, class: "form-control"
      .actions
        %button.btn.btn-primary.pull-right{type:'submit'}
          =t('devise.invitations.new.submit_button')
